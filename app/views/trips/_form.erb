<%= form_for trip do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    <%= f.label :description %>
    <%= f.text_area :description %> <br>
    <%= f.label :pickup %>
    <%= f.datetime_field :pickup %> <br>
    <%= f.label :drop_off %>
    <%= f.datetime_field :drop_off %> <br>
    <%= f.label "Please List gear you would like to rent for this trip:" %>
    <%= f.fields_for :gear_list do |g| %>
        <%= g.label :name %>
        <%= g.text_field :name %> <br>
    <% end %>

    <%= f.submit %> 
<% end %>